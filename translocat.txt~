#check betacamkii activity-dependent translocation Wheeler_etal_2012, Tsui_and_Schulman_2005
# units: nm ms


define dfc_ca 600000
define graph_on
define stimtime 5

#--------------------General parameters--------------

ifdefine graph_on
	graphics opengl_good
	graphic_iter 1
	frame_thickness 0
	frame_color 1 1 1
	#grid_thickness 1
else
	graphics none
endif

dim 3
accuracy 10

molperbox 1

boundaries	0	-50 50
boundaries	1	-50	50
boundaries	2	-50	50

time_start 0
time_stop	stimtime
time_step 	0.00001	#0.01 usec

#---------------------Molecules------------------------
species ca
species cam
species cam-ca1
species cam-ca2
species cam-ca3
species cam-ca4
species bcamkii
species bcamkii-cacam
species bcamkii-cacam-pT286
species bcamkii-pT286

molecule_lists ca_lst cam_lst bcamkii_lst
mol_list ca		ca_lst
mol_list cam*	cam_lst
mol_list bcamkii* bcamkii_lst
	
ifdefine graph_on
	display_size all 0.1
	color ca		red
	color cam		black
	color cam-*		cyan
	color bcamkii	green
	color bcamkii-*	blue
endif

difc ca			dfc_ca
difc cam*		50000
difc bcamkii	0
difc bcamkii-*	

define cam1_on		57018000 		#NT_on+CT_on
define cam1_off 	162.6			#NT_off+CT_off
define cam2_on		57346100 		#NT_on+NR_on+CT_on+CR_on
define cam2_off		206.6130		#NT_off+NR_off+CT_off+CR_off
define cam3_on		328100			#NR_on+CR_on
define cam3_off		44.0130			#NR_off+CR_off
define cam4_on		328100			#NR_on+CR_on
define cam4_off		44.0130			#NR_off+CR_off

#------------surfaces------------------
excluded volume


start_surface cell
action both all r
color both grey 0.5
polygon both edge
panel rect 

end_surface

start_surface shell
action both ca t
action both cam* r
color both grey 0.5
polygon both edge
panel sph 0 0 0 10 20 20 #nanodomain radius 10nm
end_surface

start_compartment nano
surface shell
point 0	0 0
end_compartment

